<table id="interviews" class="table table-hover table-bordered table-condensed table-striped">
<thead>
  <tr>
    <th>Interview</th>
    <th>Name</th>
    <th>Sex</th>
    <th>Ethnicity</th>
    <th>Age</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% @interviews.each do |interview| %>
    <tr <% if interview.visible == 0 %>class="error"<% end %>>
      <td><%= "%03d" % interview.interview_id %></td>
      <td><%= interview.names %></td>
      <td><%= interview.sex %></td>
      <td><%= interview.ethnicity %></td>
	  <td><%= interview.age %></td>
      <td><%= link_to "View", url_for(:controller => "admin",:action => "view_interview", :id => interview.id )%> - <%if interview.visible == 1 %><%= link_to "Disable", url_for(:controller => "admin",:action => "disable_interview", :id => interview.id )%><% else %><%= link_to "Enable", url_for(:controller => "admin",:action => "enable_interview", :id => interview.id )%> <% end %></td>

    </tr>
  <% end %>
</tbody>
</table>