<h1>Interviews</h1>


<div class="well">
<%= form_tag({:action => "update_interviews"}, :remote => true) do %>
	    <legend>Filter Interviews</legend>
<div class="row">
<div class="span-3">	
  <fieldset>
    <label>Ethnicities</label>
	<%= select_tag :ethnicity, options_from_collection_for_select(@ethnicities, "code", "ethnicity"), :multiple => true, :include_blank => true %>    
  </fieldset>
</div>
<div class="span-3">
  <fieldset>
    <label>Sex</label>
	<%= select_tag :sex, "<option>F</option><option>M</option>".html_safe, :multiple => true, :include_blank => true %>    
  </fieldset>

</div>
<div class="span-3">
  <fieldset>
    <label>Age Range</label>
	<%= text_field_tag 'lower_age', nil, :class => "span1"%> - 
	<%= text_field_tag 'upper_age', nil, :class => "span1"%>    
  </fieldset>

</div>
</div>

<div class="row">
<div class="span-3">

<%= content_tag :button, :type => :submit, :class => :btn do %>
	Update
<% end%>
</div>

<div class="span-3">

Interviews: <span id="counter"><%= @interviews.size%></span>
</div>

</div>

<% end %>
</div>
<div id="interviews">
	<%= render :partial => "interview_list"%>	
</div>
